$(document).ready ->

  checkMyLocation()
  removeText()
  #doCloseStationsMap()

removeText = () ->
  $('.textInput').focus ->
    $(@).val ""

checkMyLocation = () ->
  if $('#myLocationsMap').height() > 0
    navigator.geolocation.getCurrentPosition success, error, { timeout: 5000 }


success = (pos) -> 
  window.position = pos
  getAjax = () ->
    return $.ajax
      url: 'http://aqueous-reaches-7754.herokuapp.com/nearby_stations.json'
      data: { coords: [pos.coords.latitude, pos.coords.longitude] }
      type: 'get'
  $.when(getAjax()).then populateMyLocation

populateMyLocation = (stations) ->

  latlng = new google.maps.LatLng position.coords.latitude, position.coords.longitude
  mapOptions = 
    center: latlng
    zoom: 10
    mapTypeId: google.maps.MapTypeId.ROADMAP
  map = new google.maps.Map(document.getElementById("myLocationsMap"),
    mapOptions);
  marker = new google.maps.Marker 
    map: map
    animation: google.maps.Animation.DROP
    position: latlng
    content: 'You are here'
  infoWindow = new google.maps.InfoWindow
  infoWindow.open map,marker
  infoWindow.setContent marker.content
  
  $(stations).each ->
    #Populate map
    console.log JSON.stringify @
    latlng = new google.maps.LatLng @.lat, @.lon
    marker = new google.maps.Marker 
      map: map
      position: latlng
      icon: '/assets/train.png'
      content: """<a href="http://localhost:3000/station_info?data=#{@.code}">#{@.stationName}</a> """
    google.maps.event.addListener marker, 'click', ->
      infoWindow.open map, @
      infoWindow.setContent @.content
    # end populate map

    #populate station results div
    $('#myLocation').append """<a href="http://localhost:3000/station_info?data=#{@.code}">#{@.stationName}</a><hr>"""

  
    
error = (error) ->
  alert 'Failed to get location' + JSON.stringify error
  history.back()

  



